<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.smartambulance.frontend.controller.HomeController"
      alignment="CENTER" spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Smart Ambulance - Nearby Hospitals" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <TableView fx:id="hospitalTable" prefWidth="500" prefHeight="300">
        <columns>
            <TableColumn fx:id="nameColumn" text="Hospital Name" prefWidth="250"/>
            <TableColumn fx:id="addressColumn" text="Address" prefWidth="250"/>
            <TableColumn fx:id="contactColumn" text="Contact Number" prefWidth="150"/>

        </columns>
    </TableView>

    <Button fx:id="refreshButton" text="Refresh Hospitals" prefWidth="200"/>

</VBox>
